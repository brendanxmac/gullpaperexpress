<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4><%= t('.sign_up', default: 'Sign up') %></h4>
  </div>
  <div class="panel-body">
    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
      <div class="form-group">
        <div class="col-md-6 no-padding">
          <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
        </div>
        <div class="col-md-6 no-padding left-padding">
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.text_field :phone_number, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.text_field :venmo_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.select :customer_type, ['Freshman', 'Sophomore', 'Junior', 'Senior',
          'Professor', 'Other'], :prompt => ["Select One"], class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.select :gender, ['Female', 'Male', 'Other', 'Rather not Answer'],
         :prompt => ["Select One"], class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.check_box :terms_and_conditions, label: " I Accept the Terms and Conditions"%>
        &nbsp<%= link_to 'Terms and Conditions', terms_path %>
      </div>
      <%= f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
<%= render 'devise/shared/links' %>
