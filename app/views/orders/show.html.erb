<%- model_class = Order -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @order.title %></dd><br>
  <dt><strong><%= model_class.human_attribute_name(:delivery_time) %>:</strong></dt>
  <dd><%= @order.delivery_time %></dd><br>
  <dt><strong><%= model_class.human_attribute_name(:attachment) %>:</strong></dt>
  <dd>Recieved</dd><br>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @order.status %></dd><br>
  <dt><strong><%= model_class.human_attribute_name(:created_at) %>:</strong></dt>
  <dd><%= time_ago_in_words(@order.created_at)%> ago</dd><br>
  <% if current_user == @order.user || current_user.admin?  %>
    <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
    <dd><%= @order.location %></dd><br>
    <dt><strong><%= model_class.human_attribute_name(:details) %>:</strong></dt>
    <dd><%= @order.details %></dd><br>
  <% end %>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              orders_path, :class => 'btn btn-info'  %>
<% if current_user == @order.user || current_user.admin? %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_order_path(@order), :class => 'btn btn-warning' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                order_path(@order),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
<% end %>
<% if current_user.admin? %>
  <%= link_to 'Out for Delivery', out_for_delivery_order_path(@order), class: 'btn btn-primary btn-md sign-up' %>
  <%= link_to 'Delivered', delivered_order_path(@order), class: 'btn btn-success btn-md sign-up' %>
<% end %>
<br><br>
